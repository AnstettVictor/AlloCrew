{% extends 'admin/base.html.twig' %}

{% block title %}announcement index{% endblock %}

{% block body %}
    <h1>Liste des Annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prénom de l'auteur</th>
                <th>Nom de l'auteur</th>
                <th>Email de l'auteur</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announcement in announcements %}
            <tr>
                <td>{{ announcement.id }}</td>
                <td>{{ announcement.title }}</td>
                <td>{{ announcement.user.firstname }}</td>
                <td>{{ announcement.user.lastname }}</td>
                <td>{{ announcement.user.email }}</td>
                <td>{{ announcement.createdAt|date('Y-m-d H:i:s')}}</td>
                <td>
                    {{ include('admin/announcement/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('admin_announcement_new') }}">Create new</a> #}
{% endblock %}
